<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="PrimeraTarea" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_blue_light</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="PrimeraTarea.NIF">
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="PrimeraTarea.Conversor">
        <item name="colorPrimary">@android:color/holo_purple</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>
    <style name="PrimeraTarea.Images">
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>
    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="Toolbar.NIF">
        <item name="android:background">@android:color/holo_orange_dark</item>
    </style>
    <style name="Toolbar.Conversor">
        <item name="android:background">@android:color/holo_purple</item>
    </style>
    <style name="Toolbar.Images">
        <item name="android:background">@android:color/holo_red_light</item>
    </style>
    <style name="Botones" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Botones.NIF">
        <item name="android:backgroundTint">@android:color/holo_orange_dark</item>
    </style>
    <style name="PrimeraTarea.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@android:color/holo_purple</item>
    </style>
</resources>